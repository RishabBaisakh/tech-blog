<table class="table table-hover align-middle">
  <caption class="visually-hidden">
    List of blog posts with title, author, and date
  </caption>
  <thead class="table-light">
    <tr>
      <th scope="col" class="text-nowrap" style="width: 300px">Title</th>
      <th scope="col">Author</th>
      <th scope="col">Date</th>
      <th scope="col" class="text-end">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% blogs.forEach(blog => { %>
    <tr>
      <td class="text-truncate" style="max-width: 300px"><%= blog.title %></td>
      <td><%= blog.profile.firstName %> <%= blog.profile.lastName %></td>
      <td>
        <%= new Date(blog.createdAt).toLocaleString('en-US', { year: 'numeric',
        month: 'short', day: 'numeric', hour: 'numeric', minute: '2-digit',
        hour12: true }) %>
      </td>
      <td class="text-end">
        <a
          class="icon-link icon-link-hover"
          href="/admin/blogs/<%= blog._id %>"
          aria-label="View details for blog titled <%= blog.title %>"
        >
          View
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="bi"
            viewBox="0 0 16 16"
            width="16"
            height="16"
            role="img"
            aria-hidden="true"
            focusable="false"
          >
            <title>View blog</title>
            <path
              d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"
            />
          </svg>
        </a>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
