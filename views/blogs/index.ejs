<%- include("../partials/head.ejs") %>
<body>
  <%- include('../partials/nav.ejs') %>

  <main class="container pt-2 pb-5 blogs">
    <div class="row mb-3"><%- include("./createModal") %></div>
    <div class="row g-4">
      <% if (blogs.length > 0) { %> <% blogs.forEach(blog => { %>
      <div class="col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm hover-shadow-lg">
          <a
            href="/blogs/<%= blog._id %>"
            class="text-decoration-none text-dark"
          >
            <img
              src="/uploads/<%= blog.image.filename %>"
              class="card-img-top custom-img-height"
              alt="Blog Image"
            />
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <p class="card-text text-muted custom-blog-body-height">
                <%= blog.body.length > 100 ? blog.body.substring(0, 100) + '...'
                : blog.body %>
              </p>
            </div>
          </a>

          <% if (blog.approvalStatus === "approved") { %>
          <div class="px-3 pb-2 d-flex justify-content-end gap-2">
            <%- include('./commentModal.ejs', { comments: blog.comments, blogId:
            blog._id }) %> <% if (blog.likes.map(like =>
            like.toString()).includes(currentProfileId)) { %>
            <button
              class="btn btn-outline-danger btn-sm dislike-button"
              data-id="<%= blog._id %>"
            >
              <i class="bi bi-heart-fill text-danger"></i> Dislike
            </button>
            <% } else { %>
            <button
              class="btn btn-outline-danger btn-sm like-button"
              data-id="<%= blog._id %>"
            >
              <i class="bi bi-heart"></i> Like
            </button>
            <% } %>
          </div>
          <% } %>

          <div
            class="card-footer d-flex flex-wrap justify-content-between align-items-center small text-muted mt-auto"
          >
            <span
              ><%= new Date(blog.createdAt).toLocaleDateString('en-US', { year:
              'numeric', month: 'short', day: 'numeric' }) %></span
            >
            <span
              ><%= blog.profile.firstName %> <%= blog.profile.lastName %></span
            >
            <% if (blog.approvalStatus === "pending") { %>
            <span class="badge bg-warning text-dark"
              ><%= blog.approvalStatus %></span
            >
            <% } else if (blog.approvalStatus === "approved") { %>
            <span class="badge bg-success"><%= blog.approvalStatus %></span>
            <% } else { %>
            <span class="badge bg-danger"><%= blog.approvalStatus %></span>
            <% } %>
          </div>
        </div>
      </div>
      <% }) %> <% } else { %>
      <div class="col-12">
        <div class="alert alert-info text-center">
          There are no blogs to display.
        </div>
      </div>
      <% } %>
    </div>
  </main>

  <%- include('../partials/footer.ejs') %>

  <script>
    const likeButtons = document.querySelectorAll(".like-button");
    const dislikeButtons = document.querySelectorAll(".dislike-button");

    likeButtons.forEach((button) => {
      const blogId = button.getAttribute("data-id");
      button.addEventListener("click", async (e) => {
        const result = await fetch(`/blogs/${blogId}/like`, {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
        });
      });
    });

    dislikeButtons.forEach(async (button) => {
      const blogId = button.getAttribute("data-id");

      button.addEventListener("click", async (e) => {
        const result = await fetch(`/blogs/${blogId}/dislike`, {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
        });
      });
    });
  </script>
</body>
