<button
  class="btn btn-outline-primary btn-sm comment-button me-2"
  data-bs-toggle="modal"
  data-bs-target="#commentModal_<%= blogId %>"
>
  <i class="bi bi-chat"></i>
</button>

<div
  class="modal fade"
  id="commentModal_<%= blogId %>"
  tabindex="-1"
  aria-labelledby="commentModalLabel_<%= blogId %>"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="commentModalLabel_<%= blogId %>">
          Comments
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>

      <div class="modal-body">
        <% if (comments && comments.length) { %>
        <div class="d-flex flex-column">
          <% comments.forEach(comment => { %>
          <div class="card mb-2" style="background-color: #e9f5ff">
            <div class="card-body d-flex align-items-start">
              <img
                src="/uploads/<%= comment.author.image.filename %>"
                alt="Profile Image"
                class="rounded-circle shadow me-3"
                style="width: 40px; height: 40px; object-fit: cover"
              />
              <div class="flex-grow-1">
                <div class="d-flex mb-1 fw-bold w-100">
                  <p class="mb-0">
                    <%= comment.author.firstName %> <%= comment.author.lastName
                    %>
                  </p>
                  <small class="ms-auto text-muted">
                    <%= new Date(comment.createdAt).toLocaleDateString('en-US',
                    { year: 'numeric', month: 'long', day: 'numeric' }) %>
                  </small>
                </div>
                <p class="mb-0"><%= comment.content %></p>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
        <% } else { %>
        <p class="text-muted">Your comment will be the first!</p>
        <% } %>
      </div>

      <div class="modal-footer">
        <form class="w-100" method="POST" action="/comment">
          <input type="hidden" name="blogId" value="<%= blogId %>" />
          <div class="mb-2">
            <textarea
              class="form-control"
              id="comment"
              name="content"
              rows="2"
              placeholder="Comment..."
              required
            ></textarea>
          </div>
          <button type="submit" class="btn btn-outline-primary float-end">
            <i class="bi bi-arrow-right-square-fill"></i>
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
